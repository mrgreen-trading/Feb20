<odoo>
  <data>
      
       <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="agent_list_action">
      <field name="name">Agents </field>
      <field name="res_model">agent_app.agentmodel</field>
      <field name="view_mode">tree,form</field>
       
    </record>
    <record model="ir.actions.act_window" id="agenttype_list_action">
      <field name="name">Agent Types </field>
      <field name="res_model">agent_app.agenttype</field>
      <field name="view_mode">tree,form</field>
       
    </record>
    <record model="ir.actions.act_window" id="location_list_action">
      <field name="name">Locations </field>
      <field name="res_model">agent_app.location</field>
      <field name="view_mode">tree,form</field>
       
    </record>
    <record model="ir.actions.act_window" id="tradingpoint_list_action">
      <field name="name">Trading Points </field>
      <field name="res_model">agent_app.tradingpoint</field>
      <field name="view_mode">tree,form</field>
       
    </record>

    <menuitem name="MGA payment hub" id="main_agent_app_menu"/>
    
    <menuitem name="Agents Menu" id="agent_app_menu" parent="main_agent_app_menu" />
      
    <menuitem name="Agents" id="agents_menu" parent="agent_app_menu"
              action="agent_list_action"/>
    <menuitem name="Agent Types" id="location_menu" parent="agent_app_menu"
              action="agenttype_list_action"/>
    <menuitem name="Locations" id="agenttype_menu" parent="agent_app_menu"
              action="location_list_action"/>
    <menuitem name="Trading Points" id="tradingpoint_menu" parent="agent_app_menu"
              action="tradingpoint_list_action"/>
      
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="agent_app.agentmodel">
      <field name="name">Agent data</field>
      <field name="model">agent_app.agentmodel</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="ussd_id"/>
          <field name="phone"/>
          <field name="location"/>
          <field name="city_id"/>
          <field name="area"/>
          <field name="mpesa"/>
          <field name="completed"/>
          <field name="email"/>
          <field name="balance"/>
        </tree>
      </field>
    </record>

    <!-- Add Agent Form -->

    <record model="ir.ui.view" id="agent_form_view">
            <field name="name">Agent Form</field>
            <field name="model">agent_app.agentmodel</field>
            <field name="arch" type="xml">
                <form string="Agents Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="ussd_id"/>
                            <field name="location"/>
                            <field name="city_id"/>
                            <field name="area"/>
                            <field name="mpesa"/>
                            <field name="completed"/>
                            <field name="direction"/>
                            <field name="latitude"/>
                            <field name="longitude"/>
                            <field name="archive"/>
                            <field name="email"/>
                            <field name="balance"/>
                            
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

<!--Search view -->

        <record model="ir.ui.view" id="agent_search_view">
            <field name="name">Agent Search</field>
            <field name="model">agent_app.agentmodel</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="ussd_id"/>
                    <field name="location"/>
                    <field name="area"/>
                    <field name="completed"/>
                </search>
            </field>
        </record>
 <!-- Agent type list view -->
  
    <record model="ir.ui.view" id="agent_app.agenttype">
      <field name="name">Listing Agent Type</field>
      <field name="model">agent_app.agenttype</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="kind"/>
          <field name="active"/>
         
        </tree>
      </field>
    </record>   
<!-- Agent Type Form-->
     <record model="ir.ui.view" id="agenttype_form_view">
            <field name="name">Agent Type Form</field>
            <field name="model">agent_app.agenttype</field>
            <field name="arch" type="xml">
                <form string="Agents Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="kind"/>
                            <field name="active"/>
                           
                            
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
<!-- Location List View -->
  <record model="ir.ui.view" id="agent_app.location">
      <field name="name">Listing Location</field>
      <field name="model">agent_app.location</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="tradingpoint"/>
          <field name="active"/>
         
        </tree>
      </field>
    </record>      
<!-- Location Form View -->
  <record model="ir.ui.view" id="location_form_view">
            <field name="name">Location Form</field>
            <field name="model">agent_app.location</field>
            <field name="arch" type="xml">
                <form string="Agents Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                           
                        </group>
                    </sheet>
                </form>
            </field>
    </record>   
<!-- Trading Point Form view -->
   <record model="ir.ui.view" id="tradingpoint_form_view">
            <field name="name">Create Trading Point</field>
            <field name="model">agent_app.tradingpoint</field>
            <field name="arch" type="xml">
                <form string="Create Trading Point">
                    <sheet>
                        <group>
                            <field name="city"/>
                            <field name="name"/>
                            <field name="active"/>
                           
                        </group>
                    </sheet>
                </form>
            </field>
    </record>     
