<odoo>
  <data>
      
       <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="agent_list_action">
      <field name="name">Agents </field>
      <field name="res_model">agent_app.agentmodel</field>
      <field name="view_mode">tree,form</field>
       
    </record>

    <menuitem name="Agents App" id="main_agent_app_menu"/>
    
    <menuitem name="Agents Menu" id="agent_app_menu" parent="main_agent_app_menu" />
      
      <menuitem name="Agents" id="agents_menu" parent="agent_app_menu"
              action="agent_list_action"/>
      
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="agent_app.agentmodel">
      <field name="name">Agent data</field>
      <field name="model">agent_app.agentmodel</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="phone"/>
          <field name="location"/>
          <field name="city_id"/>
          <field name="town_id"/>
          <field name="mpesa"/>
          <field name="completed"/>
          <field name="email"/>
          <field name="balance"/>
        </tree>
      </field>
    </record>

    <!-- Add Agent Form -->

    <record model="ir.ui.view" id="agent_form_view">
            <field name="name">Agent Form</field>
            <field name="model">agent_app.agentmodel</field>
            <field name="arch" type="xml">
                <form string="Agents Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="location"/>
                            <field name="city_id"/>
                            <field name="town_id"/>
                            <field name="mpesa"/>
                            <field name="completed"/>
                            <field name="direction"/>
                            <field name="latitude"/>
                            <field name="longitude"/>
                            <field name="archive"/>
                            <field name="email"/>
                            <field name="balance"/>
                            
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

<!--Search view -->

        <record model="ir.ui.view" id="agent_search_view">
            <field name="name">Agent Search</field>
            <field name="model">agent_app.agentmodel</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="location"/>
                    <field name="completed"/>
                </search>
            </field>
        </record>
   

